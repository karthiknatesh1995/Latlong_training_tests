<%= render 'header' %>
<h1>Enter Books Details</h1>
<% if flash[:notice] %>
    <div class="notice" align=center><%= flash[:notice] %></div>
  <% end %>
<table>
<%= form_for :article, url: articles_new_path do |f|%>
<tr>
<td ><%= f.label "Accesssion Number"%></td>
<td><%= f.text_field :acc_no%></td>
</tr>
<tr>
<td><%= f.label "Title"%></td>
<td><%= f.text_field :title%></td>
</tr>
<tr>
<td><%= f.label "Authors"%></td>
<td><%= f.text_field :author%></td>
</tr>
<tr>
<td><%= f.label "Edition"%></td>
<td><%= f.text_field :edition%></td>
</tr>
<tr>
<td><%= f.label "Publisher"%></td>
<td><%= f.text_field :publisher%></td>
</tr>
<tr>
<td></td>
<td align="center"><%= f.submit("Submit Details")%></td>
</tr>
<% end %>
<tr>
<td></td><td align="center"><%= button_to "Back", articles_path, :method => "get"%></td></tr>
</table>


