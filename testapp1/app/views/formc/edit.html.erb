<h1>Editing form</h1>

<%= form_for :formc, url: formc_path(@form), method: :patch do |f| %>
 
  <% if @form.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@form.errors.count, "error") %> prohibited
        this formc from being saved:
      </h2>
      <ul>
        <% @form.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
 
  <p>
    <%= f.submit ("SAVE") %>
  </p>
 
<% end %>
 
<%= link_to 'Back', formc_index_path %>